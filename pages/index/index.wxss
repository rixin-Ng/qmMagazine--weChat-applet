.nav{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;

}
.recommend{
    display: block;
    margin-top: 90rpx;
}
.loading-wrap{
    position: fixed;
    top: 0;
    height: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
}
.loading{
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -20rpx;
    margin-top: -20rpx;
}
.add{
    margin-right: 10rpx;
}
.to-catalog{
    display: inline-block;
    border: 1rpx solid #333;
    padding: 10rpx 20rpx;
    font-size: 30rpx;
}