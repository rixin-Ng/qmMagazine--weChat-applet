/* components/article/cmp.wxss */
.container{
    background-color: #fff;
}
.head-container{
    margin: 20rpx 0;
    padding: 20rpx;
}
.head-icon{
    height: 50rpx;
    width: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    vertical-align: middle;
}
.head-text{
    font-size: 30rpx;
    color: #666;
}
.control-container{
    display: flex;
    padding: 20rpx;
    justify-content: space-between;
    align-items: center;
}
.more-tag{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.more-tag .more-box{
    display: block;
    margin-left: 25rpx;
    line-height: 32rpx;
}
.img-btn{
    height: 50rpx;
    width: 50rpx;
}
.img-btn .img{
    height: 50rpx;
    width: 50rpx;
    margin-bottom: 20rpx;
}