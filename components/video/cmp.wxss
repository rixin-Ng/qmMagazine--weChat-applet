/* components/video/cmp.wxss */

.video-wrap{
    position: relative;
    width:700rpx;
    height: 400rpx;
}
.video{
    width: 700rpx;
    height: 400rpx;
}
.btn-wrap{
    position: absolute;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    width:100rpx;
    height: 100rpx;
    left: 50%;
    top: 50%;
    margin-left: -50rpx;
    margin-top: -50rpx;
    border-radius: 50%;
    background-color: rgba(0,0,0,0.4);
}
.play-icon{
    width:40rpx;
    height: 40rpx;
}
.alltime{
    display: block;
    font-size: 20rpx;
    color: #fff;
}
.gif-wrap{
    position: absolute;
    width: 700rpx;
    height: 400rpx;
    /* display: flex; */
    /* justify-content: center; */
    /* align-items: center; */
}
.gif-image{
    width: 100%;
    height: 100%;
}
.title-container{
    margin: 20rpx;
    font-size: 36rpx;
}
.mask{
    position: fixed;
    top: 0;
    left: 0;
    height: 1334rpx;
    width: 750rpx;
    background-color: rgba(0,0,0,0.4);
}